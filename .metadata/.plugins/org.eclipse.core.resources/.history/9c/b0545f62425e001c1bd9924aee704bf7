$(document).ready(function()
		{
			$("#submitBtn").click(function()
			{
				// 테스트
				//alert("확");
				$("#err").css("display", "none");
				
				if($("#id").val()=="" || $("#pw").val()=="")
				{
					$("#err").html("항목을 모두 입력해야 합니다.").css("display","inline");
					return
				}
				
				$("#loginForm").submit();
					
			});
		});
	
